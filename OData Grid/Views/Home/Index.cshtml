@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div >
        <h2>Datatables Grid, OData</h2>

        <table cellpadding="0" cellspacing="0" border="0" class="display" id="products">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>OnStock</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
   
</div>

@section Scripts{
<link href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet">
<script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
<script src="~/Scripts/jquery.dataTables.odata.js"></script>

<script>

    $('table#products').dataTable({
        "sAjaxSource": "/odata/Products",
        "iODataVersion": 3,
        "sPaginationType": "full_numbers",

        "aoColumns": [
                { "mData": "Name" },
                { "mData": "Description" },
                { "mData": "OnStock", sType: 'numeric' },
        ],
        "fnServerData": fnServerOData, // required
        "bServerSide": true,  // optional
    });
</script>

}